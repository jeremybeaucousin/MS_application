	public static void searchMovie(String movieName) {

		URL urlTheMovieDbSearching = buildURL("/search/movie", "&query=" + movieName);
          	
		try {
			JSONObject searchMovieResult = new JSONObject(new JSONTokener(urlTheMovieDbSearching.openStream()));
			System.out.println(searchMovieResult.get("results"));
			if(((JSONArray) searchMovieResult.get("results")).size() > 0) {
				System.out.println(((JSONObject) ((JSONArray) searchMovieResult.get("results")).get(0)).get("id"));
